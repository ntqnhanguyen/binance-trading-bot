# Hybrid Strategy Live Trading Configuration

# =============================================================================
# BINANCE API CREDENTIALS
# =============================================================================
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# =============================================================================
# TRADING MODE
# =============================================================================
# Options: paper, testnet, mainnet
TRADING_MODE=paper

# =============================================================================
# TRADING SYMBOLS
# =============================================================================
# Comma-separated list of trading pairs
TRADING_SYMBOLS=BTCUSDT,ETHUSDT

# =============================================================================
# CAPITAL MANAGEMENT
# =============================================================================
INITIAL_CAPITAL=10000

# =============================================================================
# HYBRID STRATEGY CONFIGURATION
# =============================================================================
# Path to hybrid strategy YAML config
HYBRID_CONFIG=config/hybrid_strategy.yaml

# =============================================================================
# TRADING INTERVAL
# =============================================================================
# Seconds between trading loop iterations
TRADING_INTERVAL=60

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=./logs

# =============================================================================
# NOTES
# =============================================================================
# 1. For PAPER mode: No real orders, just simulation
# 2. For TESTNET mode: Use Binance Testnet API keys
# 3. For MAINNET mode: Use real Binance API keys - REAL MONEY!
# 4. Adjust HYBRID_CONFIG for pair-specific settings
# 5. Monitor logs regularly in production

